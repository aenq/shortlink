<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Shortlink</title>
</head>

<body>
    <div class="container">
        <h1> UNJAYA Shortlink</h1>

        <form action="/api/shortlinks" method="post" class="my-4 form-inline">
            <label for="longUrl" class="sr-only"></label>
            <div class="d-flex">
                <input required placeholder="URL" type="url" name="longUrl" id="longUrl" class="form-control mr-3 w-80"
                    style="margin-right: 14px;">
                <button class="btn btn-success ml-2" type="submit">Singkatkan</button>
            </div>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortlinks.forEach(shortlink=> { %>
                    <tr>
                        <td><a href="<%= shortlink.longUrl %>">
                                <%= shortlink.longUrl %>
                            </a></td>
                        <td><a href="<%= shortlink.shortUrl %>">
                                <%= shortlink.shortUrl %>
                            </a></td>
                        <td><a href="<%= shortlink.clicks %>">
                                <%= shortlink.clicks %>
                            </a></td>
                    </tr>
                    <% }) %>
            </tbody>

        </table>
    </div>
</body>

</html>